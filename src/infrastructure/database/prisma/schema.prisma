generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

enum Category {
  ACTION
  ADVENTURE
  ANIMATION
  COMEDY
  CRIME
  DOCUMENTARY
  DRAMA
  FANTASY
  HORROR
  ROMANCE
  SCI_FI
  THRILLER
}

model Movie {
  id          String   @id @default(cuid())
  title       String
  description String
  duration    Int
  coverImage  String
  category    Category
  releaseDate DateTime
  rating      Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([title, releaseDate])
}
